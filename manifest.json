{
	"name": "Portal++ Login Helper",
	"version": "1.0",
	"description": "Allows login to portal++ using BlackBaud BBID",
	"manifest_version": 2,
	"permissions": [
		"cookies",
		"http://*/*",
		"https://*/*",
		"<all_urls>"
	],
	"background": {
		"scripts": [
			"background.js"
		],
		"persistent": false
	},
	"icons": {
		"16": "images/dagdl16.png",
		"32": "images/dagdl32.png"
	},
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"contentscript.js"
			]
		}
	],
	"web_accessible_resources" : ["injected_script.js"]
}
